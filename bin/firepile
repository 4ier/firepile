#!/bin/bash

FIREPILE_HOME=${FIREPILE_HOME-`dirname $( cd "$( dirname "$0" )" && pwd )`}

FIREPILE_CLASSPATH=$FIREPILE_HOME/target/scala_2.9.0/classes:$FIREPILE_HOME/target/scala_2.9.0/test-classes:$FIREPILE_HOME/lib/javacl-1.0-beta-5-shaded.jar:$FIREPILE_HOME/lib/sootclasses.jar

SCALA_LIB_JAR=$SCALA_HOME/lib/scala-library.jar

SOOT_CLASSPATH=$FIREPILE_HOME/target/scala_2.9.0/test-classes:$FIREPILE_HOME/target/scala_2.9.0/classes:$SCALA_LIB_JAR

scala -Dsoot.class.path=$SOOT_CLASSPATH -classpath $FIREPILE_CLASSPATH $@

